{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$comment": "Decide what version of the JSON schema should be pointing to",
  "id": "http://www.openmobilealliance.org/tech/profiles/JSD/oma_ddf_library_schema.json",
  "title": "OMA Specifications Library",
  "description": "This JSON schema describes the metadata and structure or OMA Specifications Library",
  "default": "default_value",
  "type": "object",
  "properties": {
    "publisher": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "abbreviation": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "url": {
          "$ref": "#/definitions/url"
        },
        "about": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "name",
        "abbreviation",
        "version",
        "url",
        "about",
        "email"
      ]
    },
    "projects": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "abbreviation": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "resources": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "object",
              "minItems": 1,
              "uniqueItems": true,
              "properties": {
                "resourceType": {
                  "type": "string",
                  "enum": [
                    "Logo",
                    "Image",
                    "Issue",
                    "Registry",
                    "Editor",
                    "Overview",
                    "MD2HTML",
                    "Dependency",
                    null
                  ]
                },
                "name": {
                  "type": "string"
                },
                "url": {
                  "$ref": "#/definitions/url"
                }
              },
              "additionalProperties": false
            }
          },
          "url": {
            "$ref": "#/definitions/url"
          },
          "tags": {
            "$ref": "#/definitions/tag"
          },
          "versions": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "version": {
                  "type": "string"
                },
                "publicationDate": {
                  "$ref": "#/definitions/date",
                  "required": [
                    "year",
                    "month",
                    "day"
                  ]
                },
                "status": {
                  "$ref": "#/definitions/status"
                },
                "updatedDate": {
                  "$ref": "#/definitions/date",
                  "required": [
                    "year",
                    "month"
                  ]
                },
                "url": {
                  "$ref": "#/definitions/url"
                },
                "tags": {
                  "$ref": "#/definitions/tag"
                },
                "publishedContents": {
                  "type": "array",
                  "uniqueItems": true,
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "contentMediaType": {
                        "type": "string"
                      },
                      "functionalArea": {
                        "type": "string"
                      },
                      "title": {
                        "type": "string"
                      },
                      "status": {
                        "$ref": "#/definitions/status"
                      },
                      "version": {
                        "type": "string"
                      },
                      "date": {
                        "$ref": "#/definitions/date",
                        "required": [
                          "year",
                          "month",
                          "day"
                        ]
                      },
                      "fileName": {
                        "type": "string"
                      },
                      "url": {
                        "$ref": "#/definitions/url"
                      },
                      "abstract": {
                        "type": "string"
                      },
                      "tags": {
                        "$ref": "#/definitions/tag"
                      }
                    },
                    "required": [
                      "id",
                      "contentMediaType",
                      "functionalArea",
                      "title",
                      "status",
                      "version",
                      "date",
                      "fileName",
                      "url"
                    ],
                    "additionalProperties": false
                  }
                }
              },
              "additionalProperties": false,
              "required": [
                "id",
                "version",
                "publicationDate",
                "status",
                "url"
              ]
            }
          }
        },
        "additionalProperties": false,
        "required": [
          "id",
          "name",
          "description",
          "url"
        ]
      }
    }
  },
  "required": [
    "publisher",
    "projects"
  ],
  "definitions": {
    "date": {
      "type": "object",
      "properties": {
        "year": {
          "type": "string",
          "pattern": "^[0-9]{4}$"
        },
        "month": {
          "type": "string",
          "pattern": "^0[1-9]|1[012]$"
        },
        "date": {
          "type": "string",
          "pattern": "^[1-31]{2}$"
        }
      }
    },
    "tag": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "status": {
      "type": "string",
      "enum": [
        "D",
        "C",
        "A",
        "H",
        null
      ]
    },
    "url": {
      "type": "string",
      "format": "uri"
    }
  }
}
{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$comment": "Decide what version of the JSON schema should be pointing to",
    "id": "http://www.openmobilealliance.org/tech/profiles/JSD/oma_ddf_library_schema.json",
    "title": "OMA Specifications Library",
    "description": "This JSON schema describes the metadata and structure or OMA Specifications Library",
    "default":"default_value", 
    "type": "object",
    "properties": {
      "publisher": {
        "type": "object",
        "properties": {
          "publisherID":{"type": "integer"},
          "name": { "type": "string" },
          "abbreviation": { "type": "string" },
          "schemaVersion": { "type": "string" },
          "url": {
            "type": "string",
            "format":"uri"
          },
          "about": { "type": "string" },
          "email": {
            "type": "string",
            "format": "email"
          }
        },
        "additionalProperties": false,
        "required": [ "publisherID", "name", "abbreviation", "schemaVersion", "url", "about", "email" ]
      },
      "projects": {
        "type": "array",
        "uniqueItems": true,
        "items":
          {
            "type": "object",
            "properties": {
              "projectID": { "type": "integer" },
              "name": { "type": "string" },
              "abbreviation": { "type": "string" },
              "description": { "type": "string" },
              "resources": {
                "type": "array",
                "uniqueItems": true,
                "items":  {
                    "type": "object",
                    "minItems": 1,
                    "uniqueItems": true,
                    "properties": {
                      "resourceType": { "type": "string",
                        "enum":["Logo", "Image", "Issue", "Registry", "Editor", "Overview", "MD2HTML", "Dependency", null ]
                      },
                      "name": { "type": "string" },
                      "url": {
                        "type": "string",
                        "format":"uri"
                      }
                    },
                    "additionalProperties": false
                  }
              },
              "projectTags": { "$ref": "#/definitions/tags" },
              "versions": {
                "type": "array",
                "uniqueItems": true,
                "items": {
                    "type": "object",
                    "properties": {
                      "versionID" : { "type": "integer" },
                      "version": { "type": "string" },
                      "publicationDate": {
                        "$ref": "#/definitions/date",
                        "required": [ "year","month", "day" ] 
                       },
                      "versionStatus": {
                        "$ref": "#/definitions/status"
                       },
                      "updatedDate": { 
                        "$ref": "#/definitions/date",
                        "required": [ "year", "month" ] 
                       },
                      "versionTags": { "$ref": "#/definitions/tags" },
                      "publishedContents": 
                        {
                            "type": "array",
                            "uniqueItems": true,
                            "items":
                              {
                                "type": "object",
                                "properties": {
                                  "contentID" : { "type": "integer" },
                                  "contentMediaType": { "type": "string" },
                                  "functionalArea": { "type": "string" },
                                  "title": { "type": "string" },
                                  "contentStatus": {
                                    "$ref": "#/definitions/status"
                                   },
                                  "version": { "type": "string" },
                                  "contentDate": { "$ref": "#/definitions/date",
                                    "required": [ "year", "month", "day" ] 
                                  },
                                  "fileName": { "type": "string" },
                                  "url": {
                                    "type": "string",
                                    "format":"uri"
                                  },
                                  "abstract": { "type": "string" },
                                  "contentTags": { "$ref": "#/definitions/tags" }
                                },
                                "required": [ "contentID", "contentMediaType", "functionalArea", "title", "contentStatus", "version", "contentDate", "fileName", "url"
                                ],
                                "additionalProperties": false
                              }
                          }
                    },
                    "additionalProperties": false,
                    "required": [ "versionID", "version", "publicationDate", "versionStatus"
                    ]
                  }
              }
            },
            "additionalProperties": false,
            "required": [ "projectID", "name", "description" ]
          }
      }
    },
    "required": [ "publisher", "projects" ],
    "definitions": {
          "date": {
            "type": "object",
            "properties": {
              "year": { "type": "string", "pattern": "^[0-9]{4}$" },
              "month":{ "type": "string", "pattern": "^0[1-9]|1[012]$" },
              "date": { "type": "string", "pattern": "^[1-31]{2}$" }
            }
        },
          "tags": {
             "type": "array",
             "uniqueItems": true,
             "items": { "type": "string" }
        },
            "status": {
                "type": "string",
                "enum":["D", "C", "A", "H", null] 
        }
    }
  }
  